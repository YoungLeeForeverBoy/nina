<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/holder_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:clickable="true"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:theme="@style/AppTheme.DayNight"
        android:foreground="?selectableItemBackground">

        <!-- header -->
        <include layout="@layout/layout_tweet_header" />
        <!-- container of tweet's content -->
        <TextView
            android:id="@id/tweet_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="@dimen/text_14"
            android:textColor="?color_text_primary"/>
        <FrameLayout
            android:id="@id/tweet_content_fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <!-- bottom action bar -->
        <include layout="@layout/layout_item_bottom_bar" />
    </LinearLayout>

</android.support.v7.widget.CardView>
