<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/black">

    <FrameLayout
        android:id="@+id/preview_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <crazysheep.io.nina.widget.TextureVideoView
            android:id="@+id/preview_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/play_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:scaleType="center"
            android:clickable="true"
            app:srcCompat="@drawable/ic_animated_play_pause"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_dark">
        <Button
            android:id="@+id/done_tv"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="?selectableItemBackground"
            android:textSize="@dimen/text_19"
            android:text="@string/camera_record_done"
            android:textColor="@android:color/white"/>
    </FrameLayout>
</LinearLayout>