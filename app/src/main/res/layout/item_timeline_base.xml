<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:padding="10dp"
    android:orientation="vertical"
    app:cardElevation="4dp">

    <!-- header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@id/author_avatar_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@id/author_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="@dimen/text_14"
            android:textColor="?color_text_primary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_14"
            android:textColor="?color_text_secondary"/>
    </RelativeLayout>
    <!-- container of tweet's content -->
    <FrameLayout
        android:id="@id/tweet_content_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <!-- bottom action bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:id="@id/action_reply_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@id/action_reply_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_reply_grey"
                android:scaleType="center" />
        </LinearLayout>
        <LinearLayout
            android:id="@id/action_retweet_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@id/action_retweet_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_forward_grey"
                android:scaleType="center" />
            <TextView
                android:id="@id/action_retweet_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?color_text_secondary"
                android:textSize="@dimen/text_12" />
        </LinearLayout>
        <LinearLayout
            android:id="@id/action_like_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@id/action_like_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_un_favorite_grey"
                android:scaleType="center" />
            <TextView
                android:id="@id/action_like_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?color_text_secondary"
                android:textSize="@dimen/text_12" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
