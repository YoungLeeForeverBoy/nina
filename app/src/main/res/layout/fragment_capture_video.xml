<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black">

    <TextureView
        android:id="@+id/video_auto_fit_tv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="top" />
    <FrameLayout
        android:id="@+id/action_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:fitsSystemWindows="true"
        android:background="@android:color/holo_blue_light">

        <Button
            android:id="@+id/capture_btn"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/camera_start_record"
            android:textSize="@dimen/text_19"
            android:textColor="@android:color/white"
            android:background="@drawable/video_record_btn"/>

        <Button
            android:id="@+id/capture_done_btn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="@string/camera_record_next"
            android:textColor="@android:color/white"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/space_8"
            android:background="@drawable/button_bg"/>
    </FrameLayout>
</LinearLayout>